{
  //GENERAL SETTINGS
  "bootstrap.servers": "list_of_the_bootstrap_servers",
  "acks": "all",
  "security.protocol": "SASL_SSL",
  "retries": 0,
  "batch.size": 16384,
  "linger.ms": 1,
  "buffer.memory": 33554432,

  //SSL SETTINGS
  "ssl.endpoint.identification.algorithm": "https",
  "ssl.truststore.location": "truststore.jks location",
  "ssl.truststore.password": "truststore password",
  "ssl.keystore.location": "keystore.jks location",
  "ssl.keystore.password": "keystore password",
  "ssl.key.password": "key password",

  //SASL SETTINGS
  "sasl.mechanism": "PLAIN",
  "sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"<username>\" password=\"<password>\" serviceName=\"<service_name>\";",

  //SERIALIZER SETTINGS
  "key.serializer": "key_serializer_class",
  "value.serializer": "value_serializer_class"
}